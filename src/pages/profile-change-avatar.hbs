---
styles:
    - ../styles/profile.css
name: Иван
rows:
    -
        title: Почта
        message: pochta@yandex.ru
    -
        title: Логин
        message: ivanivanov
    -
        title: Имя
        message: Иван
    -
        title: Фамилия
        message: Иванов
    -
        title: Имя в чате
        message: Иван
    -
        title: Телефон
        message: +7 (909) 967 30 30

links:
    -
        href: ./profile-data-settings.hbs
        text: Изменить данные
        modification: actions__link_custom
    -
        href: ./profile-password-settings.hbs
        text: Изменить пароль
        modification: actions__link_custom
    -
        href: ./
        text: Выйти
        modification: link_attention actions__link_custom
modal:
    file:
        name: file-upload
        label: Выбрать файл на компьютере
    button:
        role: submit-change-avatar
        text: Поменять
fab-button:
    modification: fab-button_exit fab-button_small fab-button_white-icon
    role: go-to-chats
---
{{!< main }}

<div class="wrapper">
    <div class="back-to-chats-content">
        <a href="./chats-start.hbs">
            {{#> 'fab-button/fab-button' fab-button}}
                <svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" viewBox="0 0 24 24">
                    <path d="M13.4697 8.53033C13.1768 8.23744 13.1768 7.76256 13.4697 7.46967C13.7626 7.17678 14.2374 7.17678 14.5303 7.46967L18.5303 11.4697C18.8232 11.7626 18.8232 12.2374 18.5303 12.5303L14.5303 16.5303C14.2374 16.8232 13.7626 16.8232 13.4697 16.5303C13.1768 16.2374 13.1768 15.7626 13.4697 15.4697L16.1893 12.75H6.5C6.08579 12.75 5.75 12.4142 5.75 12C5.75 11.5858 6.08579 11.25 6.5 11.25H16.1893L13.4697 8.53033Z"/>
                </svg>
            {{/'fab-button/fab-button'}}
        </a>
    </div>
    <div class="main-content">
        <div class="content">
            <a href="profile-change-avatar.hbs">
                {{> 'avatar/avatar' profile=true show-action-change-avatar=true }}
            </a>
            <h3 class="name">{{ name }}</h3>
            <div class="profile-information">
                {{#each rows}}
                    {{> 'profile-information-row/profile-information-row' this}}
                {{/each}}
            </div>
            <div class="actions">
                {{#each links}}
                    <div class="actions__link">
                        {{> 'link/link' this }}
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>
<div class="modal">
    <div class="plug"></div>
    {{> 'pane-change-avatar/pane-change-avatar' modal }}
</div>